---
import Page from "../layouts/Page.astro";
import RecentNotes from "../components/react/recent-notes";
import RecentFiles from "../components/react/recent-files";
---

<Page title="Brainy Pad">
  <div>
    <h2 class="text-2xl font-bold mb-2 dark:text-white" > Home</h2>
    <h3 class="text-lg mb-1 dark:text-white">Recent notes</h3>
  </div>

  <div>
    <RecentNotes client:load />
  </div>

  <div>
    <h3 class="text-lg mt-2 dark:text-white">Recent files</h3>
  </div>

  <div>
    <RecentFiles client:load />
  </div>
</Page>
