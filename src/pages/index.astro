---
import Layout from "../layouts/Layout.astro";

import { Hello as ReactHello } from "../components/react/hello";
import { Hello as SolidHello } from "../components/solid/hello";
import SvelteHello from "../components/svelte/hello.svelte";
import VueHello from "../components/vue/hello.vue";
import AstroHello from "../components/astro/hello.astro";
import { SignedIn, SignedOut } from "astro-clerk-auth/components/control";
import { UserButton, SignIn } from "astro-clerk-auth/components/interactive";
---

<Layout title="Welcome to Astro.">
  <SignedIn>
    <UserButton />
    <ReactHello client:load />
    <SolidHello client:load />
    <SvelteHello client:load />
    <VueHello client:load />
    <AstroHello />
  </SignedIn>

  <SignedOut>
    <SignIn routing="hash" />
  </SignedOut>
</Layout>
