---
// Import your layout and the Chat component
import Layout from "../layouts/Layout.astro";
import Chatt from "../components/react/chat";
---

<Layout>
  <div class="container mx-auto px-4">
    <div class="flex items-center py-6 bg-[#e3e8ed] rounded-lg pl-10 mb-7">
      <img
        src="/iconBrainy.webp"
        alt="Icono de Brainy AI"
        class="w-14 h-14 rounded-full mr-4"
      />
      <h1 class="text-xl font-bold">Brainy AI</h1>
    </div>
    <div class="flex justify-between">
      <!-- Ajustado para separar los contenidos -->
      <div class="flex-grow">
        <Chatt client:load />
      </div>
      <div
        class="fixed right-0 top-5 bg-[#e3e8ed] p-4 rounded-lg shadow-lg mr-5"
        style={{ height: "95vh", width: "50vh" }}
      >
        <!-- Contenedor para las fuentes referenciadas, posicionado fijo -->
        <h2 class="font-bold text-lg mb-3">Sources Referenced</h2>
        <ul>
          <li>1. Familiares</li>
          <li>2. Familiares</li>
        </ul>
      </div>
    </div>
  </div>
</Layout>
